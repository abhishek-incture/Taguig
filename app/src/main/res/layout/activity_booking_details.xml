<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/defaultscreen"
    android:layout_height="match_parent"
    tools:context=".BookingDetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"

        android:background="@drawable/toolbar_gradient"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginLeft="-25dp"
                android:src="@drawable/app_logo"/>

            <ImageView
                android:id="@+id/tv_header_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/camera_icon_header" />


        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

            <LinearLayout
                android:onClick="onback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:background="@color/colorWhite">

                <ImageView
                    android:id="@+id/backArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Booking Details"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="16dp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="10dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/success"


                android:layout_alignTop="@+id/relativeLayout"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:text="Appointment"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#41B50A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView

                android:layout_marginTop="5dp"
                android:text="Successfully Created"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="#41B50A"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#616161"
                    android:textSize="@dimen/textsize14sp"
                    android:layout_gravity="end"
                    android:text="Slot Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#616161"
                    android:textSize="@dimen/textsize14sp"
                    android:layout_gravity="end"
                    android:text="Patient Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#616161"
                    android:textSize="@dimen/textsize14sp"
                    android:layout_gravity="end"
                    android:text="Patient Age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#616161"
                    android:textSize="@dimen/textsize14sp"
                    android:layout_gravity="end"
                    android:text="Patient Gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#616161"
                    android:textSize="@dimen/textsize14sp"
                    android:layout_gravity="end"
                    android:text="Hospital Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginTop="10dp"
                    android:textColor="#616161"
                    android:textSize="@dimen/textsize14sp"
                    android:layout_gravity="end"
                    android:text="Hospital Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tvSlot"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#343434"
                    android:textSize="@dimen/textsize14sp"
                    android:text="Today, 11AM - 12AM"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#343434"
                    android:textSize="@dimen/textsize14sp"
                    android:text="Manohar Rapeti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvAge"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#343434"
                    android:textSize="@dimen/textsize14sp"
                    android:text="24 years"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvGender"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#343434"
                    android:textSize="@dimen/textsize14sp"
                    android:text="Male"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvHospitalName"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#343434"
                    android:textSize="@dimen/textsize14sp"
                    android:text="Army general Hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tvHospitalAddress"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="#343434"
                    android:textSize="@dimen/textsize14sp"
                    android:text="@string/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            </LinearLayout>


            <ImageView
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:id="@+id/imgView"
                android:layout_width="200dp"
                android:layout_height="200dp"/>



            </LinearLayout>

            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/registerButton"
                android:text="Save QR Code"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:onClick="saveQRCode"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_buttonorange"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:textAllCaps="false"/>

            <TextView
                android:onClick="goToMainActivity"
                android:text="Booking Cancel"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="20dp"
                android:textColor="@color/lightOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</LinearLayout>
