<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient"
    tools:context=".LoginActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/maps_icon"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart City App"
                    android:textAllCaps="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Republic of the PHILLIPINES"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:textSize="8sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:text="Login"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginBottom="40dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorWhite"
            android:text="Email ID/ Phone No."
            android:textSize="@dimen/textsize14sp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            facebook:cardCornerRadius="@dimen/edittextRadius">

            <EditText
                android:id="@+id/username"
                android:paddingLeft="@dimen/editleftPadding"
                android:paddingRight="@dimen/editleftPadding"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextheight"
                />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:textSize="@dimen/textsize14sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:layout_alignParentLeft="true"
                android:text="Password"/>

            <TextView
                android:textSize="@dimen/textsize14sp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="Forgot Password?"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            facebook:cardCornerRadius="@dimen/edittextRadius">

            <EditText
                android:id="@+id/password"
                android:paddingLeft="@dimen/editleftPadding"
                android:paddingRight="@dimen/editleftPadding"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextheight"
                />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            facebook:cardCornerRadius="@dimen/edittextRadius"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/loginButton"
                android:text="Login"
                android:textSize="@dimen/textsize18sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextheight"
                android:textAllCaps="false"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textsize14sp"
            android:text="Or Login With"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.facebook.login.widget.LoginButton
            android:visibility="gone"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            facebook:cardCornerRadius="@dimen/edittextRadius">

            <LinearLayout
                android:onClick="facebookLogin"

                android:gravity="center_horizontal"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextheight"
                >

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:padding="2dp"
                    android:src="@drawable/facebook"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:layout_gravity="center_vertical"
                    android:textColor="#374CCA"
                    android:textSize="@dimen/textsize18sp"

                    android:text="Facebook"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGoogle"
                android:onClick="signIn"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                facebook:cardCornerRadius="@dimen/edittextRadius">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittextheight"
                    >

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:src="@drawable/google1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:textColor="#374CCA"
                        android:textSize="@dimen/textsize18sp"

                        android:text="Google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="90dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom"
            android:layout_marginBottom="30dp">

            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="@dimen/textsize14sp"
                android:text="Didn't have an Account?"
                android:textColor="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                facebook:cardCornerRadius="@dimen/edittextRadius"
                android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/createAccountButton"
                    android:text="Create Account"
                    android:textSize="@dimen/textsize18sp"

                    android:onClick="goToCreateAccount"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorAccent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittextheight"
                    android:textAllCaps="false"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>



    </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</LinearLayout>