<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Splash2Activity">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:src="@drawable/app_logo"/>


    </LinearLayout>


    <androidx.viewpager.widget.ViewPager
        android:layout_weight="1.2"
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"/>


    <LinearLayout
        android:id="@+id/l1"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_height="0dp">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/edittextRadius"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/loginButton"
                android:text="Login"
                android:textSize="@dimen/textsize18sp"
                android:textColor="@color/colorWhite"
                android:background="@color/borderred"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittextheight"
                android:textAllCaps="false"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/textsize14sp"
            android:text="Or Login With"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.facebook.login.widget.LoginButton
            android:visibility="gone"
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp" />

        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/edittextRadius">

                <LinearLayout
                    android:onClick="facebookLogin"
                    android:gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittextheight">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:src="@drawable/facebook"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/lightblue"
                        android:text="Facebook"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/btnGoogle"
                android:layout_marginLeft="5dp"
                android:onClick="signIn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/edittextRadius">

                <LinearLayout
                    android:gravity="center_horizontal"
                    android:background="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittextheight">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:padding="2dp"
                        android:src="@drawable/google1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="18sp"
                        android:textColor="@color/lightblue"
                        android:text="Google"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="If Don't have an Account?"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/textsize14sp" />




                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/createAccountButton"
                    android:text="Create Account"
                    android:textSize="@dimen/textsize18sp"

                    android:onClick="goToCreateAccount"
                    android:textColor="#FF5A5A"
                    android:background="@drawable/bg_buttonborderred"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittextheight"
                    android:textAllCaps="false"/>


        </LinearLayout>


    </LinearLayout>






</LinearLayout>
