<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/registration_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:facebook="http://schemas.android.com/tools"

    >

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:paddingLeft="5dp"
        android:id="@+id/tvbottomLogin"
        android:text="Login"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/btnDelete"

            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/registration_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>




    <TextView
            android:id="@+id/tvEmail"
            android:layout_below="@+id/tvbottomLogin"
            android:textColor="@color/colorBlack"
            android:text="Email ID/ Phone No."
            android:textSize="@dimen/textsize14sp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/username"
            android:paddingLeft="@dimen/editleftPadding"
            android:paddingRight="@dimen/editleftPadding"
            android:background="@drawable/bg_editgrey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextheight"
            />


    <RelativeLayout
        android:layout_below="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp">

        <TextView
            android:textSize="@dimen/textsize14sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_alignParentLeft="true"
            android:text="Password"/>

        <TextView
            android:textSize="@dimen/textsize14sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF5A5A"
            android:text="Forgot Password?"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


