        <EditText
            android:id="@+id/etBottomPassword"
            android:inputType="textPassword"
            android:paddingLeft="@dimen/editleftPadding"
            android:paddingRight="@dimen/editleftPadding"
            android:background="@drawable/bg_editgrey"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextheight"
            />


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        facebook:cardCornerRadius="@dimen/edittextRadius"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btnBottomLogin"
            android:text="Login"
            android:textSize="@dimen/textsize18sp"
            android:background="@drawable/bg_buttonred"
            android:textColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittextheight"
            android:textAllCaps="false"/>

