<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment"
    android:orientation="vertical"
    android:background="@color/defaultscreen">

    <RelativeLayout
        android:id="@+id/Relative_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:layout_scrollFlags="scroll|enterAlways">

        <ImageView
            android:id="@+id/Image_AuthBanner"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:fitsSystemWindows="true"
            android:src="@drawable/banner_background"
            android:scaleType="fitXY"
            app:layout_collapseMode="parallax"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/author_description"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:background="@color/colorWhite"
            android:paddingLeft="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/UserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:text="Jasmine K"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/AuthorDesignation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlack"
                    android:text="Manilla, Phillipines"
                    android:textSize="10sp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/update_profile_gradient"
                    android:text="Update Profile"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:layout_gravity="center_horizontal"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"/>

            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.incture.taguig.utils.CircleImageView
                android:id="@+id/edit_profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/profile_image"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom" />

            <com.incture.taguig.utils.CircleImageView
                android:id="@+id/addImage"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="-10dp"
                android:layout_alignRight="@+id/edit_profile_image"
                android:layout_alignBottom="@+id/edit_profile_image"
                android:src="@drawable/updatedp"/>

        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/marginleftRequestTextView"
        android:layout_marginRight="@dimen/marginleftRequestTextView"
        android:background="@color/buttongrey"
        android:layout_gravity="center_horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/trackerButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:background="@drawable/bg_button"
            android:textColor="@color/colorDarkRed"
            android:text="Friends" />

        <View
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/lineGrey"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/newsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp"
            android:text="Polls(2)" />

        <View
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/lineGrey"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="2dp"
            android:layout_height="match_parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorDarkGrey"
            android:textSize="14sp"
            android:text="Surveys(1)" />


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/defaultscreen"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="70dp">



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/friendsListRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"/>





    </androidx.core.widget.NestedScrollView>

</LinearLayout>